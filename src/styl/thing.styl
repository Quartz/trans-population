#graphic
    position relative

line, rect
    shape-rendering: crispEdges

.bars rect
    fill $qz-purp-3

ul.labels
    position absolute
    margin 0
    padding 0
    list-style-type none
    border none

    li
        position absolute
        text-align right
        // font-size 12px
        // line-height 1.3
        // color #666
        display table
        -webkit-font-smoothing antialiased

        span
            display table-cell
            vertical-align middle

.value text
    &.in
        fill #fff
